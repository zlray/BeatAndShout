<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                tools:context="com.xqlh.beatandshout.account.AdminInformationFragment">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="用户名:"
            android:textSize="@dimen/dp_5"/>

        <EditText
            android:id="@+id/et_account"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_account"
            android:background="@drawable/record_edittext_style"
            android:maxLength="11"
            android:singleLine="true"
            android:text="aaaaaaa"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_6"/>

        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/et_account"
            android:gravity="center"
            android:text="真实姓名:"
            android:textSize="@dimen/dp_5"/>

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_real_name"
            android:background="@drawable/record_edittext_style"
            android:maxLength="11"
            android:singleLine="true"
            android:text="aaaaaaa"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_6"/>

        <Button
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_34"
            android:background="@color/text"
            android:gravity="center"
            android:text="开始检索"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/rl1">

        <Button
            android:id="@+id/bt_add_account"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/text"
            android:text="添加被测账号"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_5"/>

        <Button
            android:id="@+id/bt_batch_account"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@+id/bt_add_account"
            android:background="@color/text"
            android:text="添加被测账号"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_5"/>

        <Button
            android:id="@+id/bt_batch_clear_account"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bt_batch_account"
            android:background="@color/text"
            android:text="添加被测账号"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_5"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/rl2"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/text">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:text="全选"
                android:textColor="#ffffff"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="真实姓名"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="操作"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
